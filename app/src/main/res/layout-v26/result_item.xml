<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:background="#3f5c7b">

    <TextView
        android:id="@+id/first_value_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="233"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/operator_result"
        app:layout_constraintEnd_toStartOf="@+id/operator_result"
        app:layout_constraintTop_toTopOf="@+id/operator_result" />

    <TextView
        android:id="@+id/operator_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/second_value_result"
        app:layout_constraintEnd_toStartOf="@+id/second_value_result"
        app:layout_constraintTop_toTopOf="@+id/second_value_result" />

    <TextView
        android:id="@+id/second_value_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/resultado"
        app:layout_constraintEnd_toStartOf="@+id/resultado"
        app:layout_constraintTop_toTopOf="@+id/resultado" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="= 4"
        android:textColor="@color/yellow"
        android:textSize="30sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>